<resources>

    <!-- 启动页面、直接设置windowBackground，可以实现秒启app-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash_bg</item>
    </style>

    <style name="Root.Theme.AppTheme.Light" parent="Theme.AppTheme.Light">
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Base.Theme.AppTheme.Light" parent="Theme.AppTheme.Light">
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Root.Theme.AppTheme.Dark" parent="Theme.AppTheme.Dark">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Base.Theme.AppTheme.Dark" parent="Theme.AppTheme.Dark">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--图书列表卡片-->
    <style name="CardView.Content" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Theme.AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Material Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="stateSelector">@color/state_selector_light</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="accentColor">@color/accent</item>
        <item name="iconColor">@android:color/black</item>
        <item name="windowBackground">@color/window_background</item>
        <item name="fabCircleColor">@color/fabCircleColor_light</item>
    </style>

    <style name="Theme.AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Material Theme -->
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="accentColor">@color/colorAccentDarkTheme</item>
        <item name="iconColor">@android:color/white</item>
        <item name="windowBackground">@color/window_background_dark</item>
        <item name="stateSelector">@color/state_selector_dark</item>
        <item name="fabCircleColor">@color/fabCircleColor_dark</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.GsonView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="textToolbarTitle">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="AppBaseTheme">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
        <item name="android:textSize">18sp</item> <!--  字体大小-->
    </style>
    <color name="md_white_1000">#ffffff</color>
    <color name="white">#ffffff</color>
</resources>
